<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/systemView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible">

    <!-- Android version number (title) -->
    <TextView
        android:id="@+id/systemAndroidVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/candal"
        android:textSize="@dimen/title_font_size"
        />

    <!-- Android version code name (subtitle) -->
    <TextView
        android:id="@+id/systemCodeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="@dimen/subtitle_font_size"
        />

    <!-- SDK version number -->
    <TextView
        android:id="@+id/systemSdkValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/content_font_size"
        />

    <!-- Kernel version number -->
    <TextView
        android:id="@+id/systemOsVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/content_font_size"
        />

    <!-- Current selected locale -->
    <TextView
        android:id="@+id/systemLocale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/content_font_size"
        />

</LinearLayout>